# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MegaLLM Configuration - Primary Endpoint
MODEL_ACCESS_KEY=your_megallm_api_key_here
MODEL_BASE_URL=https://ai.megallm.io/v1
MODEL_CHAT=openai-gpt-oss-20b  # Free tier model (recommended)
# MODEL_CHAT=gpt-4.1  # Premium model (requires paid subscription)
MODEL_IMAGE=stability-image-1
MAX_TOKENS=400

# MegaLLM Configuration - Secondary Endpoint (Failover)
# Optional: Uncomment to enable multi-endpoint failover
# MODEL_ACCESS_KEY_2=your_secondary_megallm_key_here
# MODEL_BASE_URL_2=https://ai.megallm.io/v1
# MODEL_CHAT_2=openai-gpt-oss-20b
# MODEL_IMAGE_2=stability-image-1

# MegaLLM Configuration - Third Endpoint (Optional)
# MODEL_ACCESS_KEY_3=your_third_megallm_key_here
# MODEL_BASE_URL_3=https://ai.megallm.io/v1
# MODEL_CHAT_3=openai-gpt-oss-20b
# MODEL_IMAGE_3=stability-image-1

# Rate Limiting
COOLDOWN=2

# Endpoint Cooldown (in seconds) - Time to wait before retrying a rate-limited endpoint
ENDPOINT_COOLDOWN=300

# Redis Configuration (Optional - will fallback to in-memory if not provided)
REDIS_URL=redis://:password@host:port/0
# Or use individual Redis settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_password
# REDIS_USERNAME=default

# Webhook Configuration (Optional - for webhook mode instead of polling)
# WEBHOOK_URL=https://yourdomain.com/webhook
# PORT=8443

